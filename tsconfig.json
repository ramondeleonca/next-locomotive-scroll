{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2015",
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    "incremental": true
  },
  "include": [
    "src/components/NextLocomotiveScroll.tsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
